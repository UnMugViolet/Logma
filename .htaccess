<IfModule mod_rewrite.c | rewrite_module>
RewriteEngine On
# Allow htaccess to follow relative links
Options +FollowSymLinks

# Management of redirecting pages/content files to root
RewriteRule ^a-propos$ /logma/pages/content/a-propos.php [L]
RewriteRule ^contacts$ /logma/pages/content/contacts.php [L]
RewriteRule ^galerie-photo$ /logma/pages/content/galerie-photo.php [L]

# Management of redirecting pages/legal files to root
RewriteRule ^cgu$ /logma/pages/legal/cgu.php [L]
RewriteRule ^mentions-legales$ /logma/pages/legal/mentions-legales.php [L]

# Management of redirecting pages/admin files to root
# RewriteRule ^access-admin-logma$ /logma/pages/admin/login.php [L]
# RewriteRule ^signup$ /logma/pages/admin/signup.php [L]


# Management of errors on website 
ErrorDocument 404 /logma/pages/errors/404.php
ErrorDocument 500 /logma/pages/errors/500.php
ErrorDocument 503 /logma/pages/errors/maintenance-logma.html


